{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sonus",
  "version": "0.4.6-alpha-sha.gd90d9f8",
  "identifier": "ryder.gabriel.sonus",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sonus",
        "width": 1600,
        "height": 900,
        "minHeight": 900,
        "minWidth": 1600,
        "center": true,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "hardenedRuntime": true
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {}
}
